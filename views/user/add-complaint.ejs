<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <%- include('../partials/nav') %>

  <main class="flex-grow max-w-7xl mx-auto mt-10 px-6 w-full">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-8">
      Lodge a Service Request
    </h2>

    <form action="/complaints" method="POST" class="bg-white p-8 rounded-3xl shadow-lg space-y-6 w-full max-w-4xl mx-auto">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">
          Full Name <span class="text-red-500">*</span>
        </label>
        <input
          required
          type="text"
          id="name"
          name="name"
          placeholder="John Doe"
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
        >
      </div>

      <div>
        <label for="phone" class="block text-sm font-medium text-gray-700">
          Phone Number <span class="text-red-500">*</span>
        </label>
        <input
          required
          type="tel"
          id="phone"
          name="phone"
          placeholder="9876543210"
          pattern="[0-9]{10}"
          title="Enter a valid 10-digit phone number"
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
        >
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">
          Email <span class="text-gray-400">(Optional)</span>
        </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="you@example.com"
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
        >
      </div>

      <div>
        <label for="address" class="block text-sm font-medium text-gray-700">
          Full Address <span class="text-red-500">*</span>
        </label>
        <textarea
          required
          id="address"
          name="address"
          rows="3"
          placeholder="123 Main Street, City"
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition resize-none"
        ></textarea>
      </div>

      <div>
        <label for="machineModel" class="block text-sm font-medium text-gray-700">
          Machine Brand/Model
        </label>
        <input
          type="text"
          id="machineModel"
          name="machineModel"
          placeholder="Aquaguard Reviva RO"
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
        >
      </div>

      <div>
        <label for="issue" class="block text-sm font-medium text-gray-700">
          Describe the Issue <span class="text-red-500">*</span>
        </label>
        <textarea
          required
          id="issue"
          name="issue"
          rows="4"
          placeholder="Leaking pipe, no water output, etc."
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition resize-none"
        ></textarea>
      </div>

      <div>
        <label for="preferredDate" class="block text-sm font-medium text-gray-700">
          Preferred Visit Date
        </label>
        <input
          type="date"
          id="preferredDate"
          name="preferredDate"
          class="mt-1 block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
        >
      </div>

      <div class="pt-4">
        <button
          type="submit"
          class="w-full py-3 bg-blue-600 hover:bg-blue-700 active:bg-blue-800 text-white font-semibold rounded-xl shadow-lg transition duration-300"
        >
          Submit Complaint
        </button>
      </div>
    </form>
  </main>

</body>
</html>
