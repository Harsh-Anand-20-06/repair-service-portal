<!-- Navbar -->
<nav class="bg-blue-600 text-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold tracking-wide">ðŸ’§ AquaFix</a>
      </div>

      <!-- Desktop Nav Links -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="hover:text-gray-200 transition">Home</a>
        <a href="/complaints" class="hover:text-gray-200 transition">Lodge Complaint</a>
        <a href="/track" class="hover:text-gray-200 transition">Track Complaint</a>

        <% if (isLoggedIn) { %>
          <a href="/user/logout" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 text-sm">Logout</a>
        <% } else { %>
          <a href="/user/login" class="hover:text-gray-200 transition">Login</a>
          <a href="/admin/login" class="hover:text-gray-200 transition">Admin</a>
        <% } %>
      </div>

      <!-- Mobile Toggle -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4 space-y-2">
    <a href="/" class="block hover:text-gray-200">Home</a>
    <a href="/complaints" class="block hover:text-gray-200">Lodge Complaint</a>
    <a href="/track" class="block hover:text-gray-200">Track Complaint</a>

    <% if (isLoggedIn) { %>
      <a href="/user/logout" class="block hover:text-gray-200">Logout</a>
    <% } else { %>
      <a href="/user/login" class="block hover:text-gray-200">Login</a>
      <a href="/admin/login" class="block hover:text-gray-200">Admin</a>
    <% } %>
  </div>
</nav>

<!-- Mobile menu toggle script -->
<script>
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  btn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>
